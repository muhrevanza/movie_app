<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:transitionName="@string/transition_search">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true">

                <com.etiennelawlor.moviehub.presentation.common.widget.CustomFontEditText
                    android:id="@+id/search_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/search_pb"
                    android:layout_alignWithParentIfMissing="true"
                    android:alpha="0.0"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="@string/search_movies_tv_shows_and_people"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="16sp"
                    app:textFont="lato_medium" />

                <ProgressBar
                    android:id="@+id/search_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:visibility="invisible" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/search_movies_layout" />

                <include layout="@layout/search_television_shows_layout" />

                <include layout="@layout/search_persons_layout" />

            </LinearLayout>

            <include layout="@layout/search_empty_layout" />

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>